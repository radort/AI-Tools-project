# =================================
# APPLICATION CONFIGURATION
# =================================
APP_NAME="AI Tools Platform"
APP_ENV=local
APP_KEY=
# Run 'php artisan key:generate' to generate APP_KEY
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8201

# =================================
# DATABASE CONFIGURATION
# =================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=ai_tools_app
DB_USERNAME=root
DB_PASSWORD=your_secure_password

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# =================================
# CACHE CONFIGURATION
# =================================
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# =================================
# MAIL CONFIGURATION
# =================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# =================================
# FRONTEND CONFIGURATION
# =================================
FRONTEND_URL=http://localhost:8200

# =================================
# SECURITY CONFIGURATION
# =================================
# Two-Factor Authentication
TWO_FACTOR_ENABLED=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:8200

# =================================
# API CONFIGURATION
# =================================
API_PREFIX=api
API_VERSION=v1

# =================================
# LOGGING CONFIGURATION
# =================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =================================
# DOCKER SERVICES CONFIGURATION
# =================================
# These should match your docker-compose.yml service names
MYSQL_HOST=mysql
REDIS_HOST=redis
PHP_FPM_HOST=php_fpm

# =================================
# DEVELOPMENT CONFIGURATION
# =================================
# Set to false in production
APP_DEBUG=true
LOG_LEVEL=debug

# =================================
# BACKUP CONFIGURATION
# =================================
BACKUP_DISK=local
BACKUP_MYSQL_ENABLED=true
BACKUP_CLEANUP_STRATEGY=delete_oldest_backups